<Page x:Class="Cloc.Pages.CheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cloc.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckPage">

    <Grid>
        <Button Name="CheckIn" Content="Check In" HorizontalAlignment="left" VerticalAlignment="center" Width="100" Height="50" Click="CheckIn_Click"/>
        <Button Name="CheckOut" Content="Check Out" HorizontalAlignment="Center" VerticalAlignment="center" Width="100" Height="50" Click="CheckOut_Click"/>
        <Button Name="CheckSalary" Content="Check Salary" HorizontalAlignment="right" VerticalAlignment="center" Width="100" Height="50" Click="CheckSalary_Click"/>
    </Grid>
</Page>
