<Page x:Class="Cloc.Pages.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cloc.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReportsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="ComboBoxFilter" Grid.Row="0" HorizontalAlignment="left" Width="300" SelectionChanged="SelectionChanged"/>

        <DatePicker Name="DateFrom" SelectedDate="" Grid.Row="1" HorizontalAlignment="Center" Width="300" SelectedDateChanged="SelectionChanged"/>
        <DatePicker Name="DateTo" Grid.Row="1" HorizontalAlignment="right" Width="300" SelectedDateChanged="SelectionChanged"/>

        <TextBox x:Name="TextBoxSum" Grid.Row="0" HorizontalAlignment="right" VerticalAlignment="Center"/>

        <ListBox x:Name="ListBoxPayments" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Page>
