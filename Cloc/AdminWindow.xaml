<Window x:Class="Cloc.AdminWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloc"
        mc:Ignorable="d"
        WindowState="Maximized"
    WindowStyle="None"
        Title="CLOC" Height="auto" Width="auto">
    <Grid>
        <StackPanel Orientation="horizontal" Height="70" Width="500" VerticalAlignment="top">
            <Button Content="Main Page" Click="buttonMain_Click" Width="auto"></Button>
            <Button Content="Admin Options" Width="auto" Click="buttonBossOptions_Click"></Button>
            <Button Content="Profile Page" Width="auto" Click="buttonProfile_Click"></Button>
            <Button Content="Activity Page"   Click="buttonLogs_Click" Width="auto"></Button>
            <Button Content="Exit" Click="buttonExit_Click" Width="auto"></Button>
        </StackPanel>
        <Frame x:Name="Main" Margin="0,35,0,0" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
